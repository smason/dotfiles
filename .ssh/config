Include config.d/*.config

Host github.com gitlab.com
  User git

Host sshproxy
  ControlMaster no
  User sshproxy
  HostName samason.uk
  IdentityFile ~/.ssh/id_sshproxy

# demo sshproxy usage
# Host target
#   ProxyCommand ssh -q sshproxy socat /home/sshproxy/sshproxy.sock -

Host *
  ControlMaster auto
  ControlPath ~/.ssh/sockets/%r@%h-%p
  ControlPersist 10m

  # see https://bugs.archlinux.org/task/74143
  # fixed in GPG 2.3
  KexAlgorithms -sntrup761x25519-sha512@openssh.com