# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base02 $base02 $base06 $base08 $base02
client.focused_inactive $base01 $base01 $base03 $base02 $base01
client.unfocused        $base01 $base01 $base03 $base01 $base01
client.urgent           $base08 $base08 $base07 $base08 $base07
client.placeholder      $base00 $base00 $base03 $base00 $base00
client.background       $base00

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+i exec --no-startup-id passmenu
bindsym $mod+Shift+i exec --no-startup-id passmenu --type
bindsym $mod+Shift+u exec --no-startup-id ~/.virtualenvs/py36/bin/python ~/bin/passmenu.py

exec xautolock -time 7 -locker screenlock
bindsym $mod+Escape exec xautolock -locknow

# password manager stuff
bindsym $mod+p       [title="^(Safe Combination Entry|PasswordSafe - .*|1Password( for ConsultantConnect)?|Google Play Music)$"] move window to workspace current
bindsym $mod+Shift+p [title="^(Safe Combination Entry|PasswordSafe - .*|1Password( for ConsultantConnect)?|Google Play Music)$"] move window to workspace security
for_window           [title="^(Safe Combination Entry|PasswordSafe - .*|1Password( for ConsultantConnect)?|Google Play Music)$"] floating enable

for_window [title="Oracle VM VirtualBox( Manager)?$"] floating enable
for_window [class="^Pinentry-gtk-2$"] border pixel 32, floating enable

# Sound
bindsym $mod+KP_Subtract exec --no-startup-id ~/.virtualenvs/py36/bin/python ~/bin/pulse-volume.py -0.1
bindsym $mod+KP_Add      exec --no-startup-id ~/.virtualenvs/py36/bin/python ~/bin/pulse-volume.py +0.1

bindcode $mod+83  exec --no-startup-id ~/bin/google-music rewind
bindcode $mod+84  exec --no-startup-id ~/bin/google-music playPause
bindcode $mod+85  exec --no-startup-id ~/bin/google-music forward

# doing bindsym $mod+KP_Left appears to depend on the numlock being set

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Prior exec --no-startup-id ~/.virtualenvs/py36/bin/python ~/bin/i3_tab_switch -1
bindsym $mod+Next  exec --no-startup-id ~/.virtualenvs/py36/bin/python ~/bin/i3_tab_switch +1

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking # disable stacking, basically unused
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# better config for multi monitors
mouse_warping none
workspace_auto_back_and_forth yes
workspace "hdmi" output HDMI-0
workspace 1 output DP-0
workspace 2 output DP-0
workspace 3 output DP-0
workspace 4 output DP-0
workspace 5 output DP-0

# switch to workspace
